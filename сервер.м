взяти "сервер"

дія запустити(х, опції, зворот)
  сервер.запустити(
    тривала дія(запит)
      шлях_без_параметрів = запит.шлях.розділити("?")[0].зрізати(1)
      перебрати х.сторінки як назва, сторінка
        чиста_назва = назва.починається_з("/") ? назва.зрізати(1) : назва
        якщо чиста_назва == шлях_без_параметрів
          вернути чекати х.відмалювати(назва)
        кінець
      кінець
      якщо х.сторінки["/404"]
        вернути чекати х.відмалювати("/404")
      кінець
      якщо х.сторінки["404"]
        вернути чекати х.відмалювати("404")
      кінець
      вернути сервер.Відповідь(код=404, дані="Не знайдено.")
    кінець,
    опції,
    зворот
  )
кінець

дати запустити